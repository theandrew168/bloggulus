{
	"name": "bloggulus",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build",
		"check": "tsc && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write src/"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.5.5",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"prettier": "^3.2.5",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.9",
		"tslib": "^2.6.2",
		"typescript": "^5.4.4",
		"vite": "^5.2.8"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"printWidth": 120,
		"semi": true,
		"singleQuote": false,
		"trailingComma": "all",
		"useTabs": true
	}
}
